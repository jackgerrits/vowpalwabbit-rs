{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 10,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "BUILD_TESTING": {
          "type": "BOOL",
          "value": "ON"
        },
        "RAPIDJSON_SYS_DEP": {
          "type": "BOOL",
          "value": "ON"
        },
        "FMT_SYS_DEP": {
          "type": "BOOL",
          "value": "ON"
        },
        "SPDLOG_SYS_DEP": {
          "type": "BOOL",
          "value": "ON"
        },
        "VW_BOOST_MATH_SYS_DEP": {
          "type": "BOOL",
          "value": "ON"
        },
        "VW_ZLIB_SYS_DEP": {
          "type": "BOOL",
          "value": "ON"
        },
        "VW_GTEST_SYS_DEP": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "vcpkg",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        }
      }
    },
    {
      "name": "vcpkg-debug",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    },
    {
      "name": "vcpkg-windows",
      "inherits": "vcpkg",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-windows-static"
        }
      }
    },
    {
      "name": "vcpkg-debug-windows",
      "inherits": "vcpkg-debug",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-windows-static"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vcpkg",
      "configurePreset": "vcpkg"
    },
    {
      "name": "vcpkg-debug",
      "configurePreset": "vcpkg-debug"
    },
    {
      "name": "vcpkg-windows",
      "configurePreset": "vcpkg-windows"
    },
    {
      "name": "vcpkg-debug-windows",
      "configurePreset": "vcpkg-debug-windows"
    }
  ]
}
